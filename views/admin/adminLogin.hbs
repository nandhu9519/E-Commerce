<section class="w3l-workinghny-form">
        <!-- /form -->
        <div class="workinghny-form-grid">
            <div class="wrapper">
                <div class="logo">
                    <h1><span>Admin</span> Log IN</h1>
                    <!-- if logo is image enable this   
                        <a class="brand-logo" href="#index.html">
                            <img src="image-path" alt="Your logo" title="Your logo" style="height:35px;" />
                        </a> -->
                </div>
                <div class="workinghny-block-grid">
                    <div class="workinghny-left-img align-end">
                        <img src="https://www.campusreel.org/assets/Admission%20Officers.svg">
                    </div>

                    <div class="form-right-inf">
						
                        <div class="login-form-content">
                            <h2>Where to?</h2>
                            <form action="/admin/adminHome" class="signin-form" method="post" id="adminLogin">
								<div class="one-frm">

									<label>Name</label>
									<input type="text" name="Name"  placeholder="" >
								</div>
								<div class="one-frm">
									<label>Password</label>
									<input type="password" name="Password"  placeholder="">
								</div>
                                {{#if adminLoginError}}
                                <span style="color: firebrick;">Incorrect username or password</span>
                                {{/if}}
                                <label class="check-remaind">
                                    <input type="checkbox">
                                    <span class="checkmark"></span>
                                    <p class="remember">Remember Me</p>

                                </label>
                                <button class="btn btn-style mt-3">Sign In </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- //form -->
    </section>
<script>
  $(document).ready(function () {
    $("#adminLogin").validate({
      rules: {
        Name: {
          required:true
        },
        Password: {
          required: true
        }
      },
      messages: {
        Name: {
          required: "Enter username"
        },
        Password: {
          required: "Enter password"      
        }
      }
    })
  })
</script>
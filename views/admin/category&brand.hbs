                        <div class="tm-bg-primary-dark tm-block tm-block-products">
                            <div class="tm-product-table-container">

                                <form id="brandAdd" enctype="multipart/form-data" method="post" role="form"
                                    action="/admin/addBrand" class="tm-edit-product-form">
                                    <div class="form-group mb-3">
                                        <input id="brandName" name="brandName" type="text" class="form-control validate"
                                            placeholder="Brand Name" />
                                    </div>
                                    <div class="custom-file mt-3 mb-3">
                                        <label for="">Brand Image</label>
                                        <img src="/category&brand/ 1.jpg" alt="" style="width: 100px; height:auto"
                                            id="imgview2">
                                        <input type="file" name="brandImage" id="brandImage" class="form-control" data-toggle="modal" onchange="return fileValidation2()">

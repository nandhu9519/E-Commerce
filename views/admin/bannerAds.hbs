<div class="">
    <div class="wrapper ">
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top " id="navigation-example">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <a class="navbar-brand" href="">Offer Management</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index"
                        aria-expanded="false" aria-label="Toggle navigation" data-target="#navigation-example">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">

                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="javscript:void(0)" id="navbarDropdownMenuLink"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">person</i>
                                    <p class="d-lg-none d-md-block">
                                        Some Actions
                                    </p>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="/admin/logout">Logout</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container mt-5">

                <div class="row tm-content-row">
                    <div class="col-sm-12 col-md-12 col-lg-6 col-xl-6 tm-block-col">
                        <div class="tm-bg-primary-dark tm-block tm-block-products">
                            <div class="tm-product-table-container">
                                <form role="form" id="bannerForm" action="/admin/bannerAdd" method="post"
                                    enctype="multipart/form-data" class="tm-edit-product-form">
                                    <div class="row">
                                        <div class="form-group mb-3 col-md-4">
                                            <label for="category">Select Offer Brand</label>
                                            <br>
                                            <select class="custom-select tm-select-accounts" id="brand" name="brand"
                                                style="color: black;">
                                                <option value="">Choose one...</option>
                                                {{#each brands}}
                                                <option value="{{this.brand}}">{{this.brand}}</option>
                                                {{/each}}
                                            </select>
                                        </div>

                                        <div class="custom-file mt-3 mb-3 col-md-4">
                                            <label for=""></label>
                                            <img src="/products/{{data._id}}__2.jpg" alt=""
                                                style="width: 100px; height:auto; margin-top: 4px;" id="imgview1">
                                            <input type="file" name="image2" id="file2" class="form-control"
                                                data-toggle="modal" onchange="return fileValidation2()">
                                        </div>

                                    </div>
                                    <div class="form-group mb-3">
                                        <textarea class="form-control validate" name="description" rows="3"
                                            placeholder="Enter description if any"></textarea>
                                    </div>
                                    {{#if bannerLimit}}
                                    <span style="color: firebrick;">Maxium 4 banners can be set at time,Delete current
                                        banner to add new</span>
                                    {{/if}}
                                     {{#if bannerExist}}
                                    <span style="color: firebrick;">Banner already exist for current brand</span>
                                    {{/if}}
                                    <br>
                                    <button class="btn btn-primary text-uppercase mb-3" type="submit">
                                        <i class="fa fa-plus" aria-hidden="true"></i>
                                        Add New Banner
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">SL NO</th>
                                <th scope="col">BRAND NAME</th>
                                <th scope="col">DESCIPTION</th>
                                <th scope="col">IMAGE</th>
                                <th scope="col">REMOVE OFFER</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each banners}}
                            <tr>

                                <td class="tm-product-name">{{add @index '1'}}</td>
                                <td>{{this.brand}}</td>
                                <td>{{this.description}}
                                    <!-- Delete alert Modal -->
                                    <div class="modal fade" id="{{this._id}}" tabindex="-1" role="dialog"
                                        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLongTitle"
                                                        style="color:black; font-weight: bolder;">Delete
                                                    </h5>
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body" style="color:black; font-weight: lighter;">
                                                    Delete Offer?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary"
                                                        data-dismiss="modal">Cancel</button>
                                                    <a type="button" class="btn btn-primary"
                                                        onclick="deleteBanner('{{this._id}}')"
                                                        data-dismiss="modal">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Delete alert Modal -->
                                </td>
                                <td><img style="width: 50px; height: 50px;" src="/banners/{{ this._id }}.jpg"></td>
                                <td>
                                    <button class="btn btn-danger" data-toggle="modal" data-target="#{{this._id}}">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                            <path
                                                d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                            <path fill-rule="evenodd"
                                                d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                        </svg>
                                    </button>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(() => {
        $("#bannerForm").validate({
            rules: {
                brand: {
                    required: true
                },
                image2: {
                    required: true
                }

            },
            messages: {
                brand: {
                    required: "Enter brand name"
                },
                image2: {
                    required: "Upload a image for category"
                }
            },
        });
    })

    function deleteBanner(bannerId) {
        $.ajax({
            url: '/admin/deleteBanner?bannerId=' + bannerId,
            method: 'get',
            success: (response) => {
                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    title: 'Banner Deleted',
                    showConfirmButton: false,
                    timer: 1000
                }).then(() => {
                    location.reload()
                })
            }
        })
    }
</script>
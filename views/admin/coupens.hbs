            <div class="container mt-5">
                <div class="row tm-content-row">
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
                        <div class="tm-bg-primary-dark tm-block tm-block-products">
                            <button class="btn btn-primary" data-toggle="modal" data-target="#addCoupen"><i
                                    class="fa fa-usd" aria-hidden="true"></i> Add coupens</button>
                            <!-- Add coupon modal-->
                            <div class="modal fade" id="addCoupen" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLongTitle"
                                                style="color:black; font-weight: bolder;">Add new coupen</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body" style="color:black; font-weight: lighter;">
                                            <form id="coupenData">
                                                <div class="form-group mb-3 col-xs-12 col-sm-12">
                                                    <input placeholder="Coupen Code" name="couponCode" type="text"
                                                        class="form-control validat" />
                                                </div><br>
                                                <div class="form-group mb-3 col-xs-12 col-sm-12">
                                                    <input id="stock" placeholder="Discount in %" name="discount"
                                                        type="number" min="1" max="100" class="form-control validate">
                                                </div>
                                                <div style="padding-left: 2%;">
                                                <div class="form-group mb-3">
                                                    <label for="date">Coupon Expiry Date</label><br>
                                                    <input type="date" id="date" name="date">
                                                </div>
                                                </div>

                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">ADD</button>

                                        </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Add coupon modal end-->
                            <div class="tm-product-table-container">
                                <br>

                                <table class="table table-hover tm-table-small tm-product-table" id="allOrders">
                                    <thead>
                                        <tr>
                                            <th scope="col">SL NO</th>
                                            <th scope="col">COUPEN CODE</th>
                                            <th scope="col">DISCOUNT(%)</th>
                                            <th scope="col">DELETE</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each coupons}}
                                        <tr>
                                            <td>{{add @index '1'}}</td>
                                            <td>{{this.couponCode}}</td>
                                            <td>{{ this.discount}}</td>

                                            <td><button data-toggle="modal" data-target="#{{this._id}}"
                                                    class="btn btn-danger"><i class="fa fa-trash-o"
                                                        aria-hidden="true"></i></button>
                                                <!-- Delete alert Modal -->
                                                <div class="modal fade" id="{{this._id}}" tabindex="-1" role="dialog"
                                                    aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLongTitle"
                                                                    style="color:black; font-weight: bolder;">Delete
                                                                </h5>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                    aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body"
                                                                style="color:black; font-weight: lighter;">
                                                                Delete the coupon?
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-dismiss="modal">Cancel</button>
                                                                <a type="button" class="btn btn-primary"
                                                                    onclick="deleteCoupon('{{this._id}}')"
                                                                    data-dismiss="modal">Delete</a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#allOrders').DataTable();
    });
</script>


<script>
         let today = new Date(), 
            day = today.getDate(),
            month = today.getMonth() + 1, //January is 0
            year = today.getFullYear();
        if (day < 10) {
            day = '0' + day
        }
        if (month < 10) {
            month = '0' + month
        }
        today = year + '-' + month + '-' + day;

        document.getElementById("date").setAttribute("min", today);
        document.getElementById("date").setAttribute("value", today); 

    $(document).ready(() => {
        $("#coupenData").validate({
            rules: {
                couponCode: {
                    required: true,
                },
                discount: {
                    required: true,
                    maxlength: 2
                }

            },
            submitHandler: () => {
                console.log('sfd')
                $.ajax({
                    url: '/admin/addCoupon',
                    method: 'post',
                    data: $('#coupenData').serialize(),
                    success: (response) => {
                        if (response == true) {
                            Swal.fire({
                                position: 'center',
                                icon: 'success',
                                title: 'Coupon Added',
                                showConfirmButton: false,
                                timer: 1000
                            }).then(() => {
                                location.reload()
                            })
                        } else {
                            Swal.fire({
                                position: 'center',
                                icon: 'error',
                                title: 'Coupon already exist',
                                showConfirmButton: false,
                                timer: 1000
                            }).then(() => {
                                $(window).load(function () {
                                    $('#addCoupen ').modal('show')
                                })
                            })
                        }

                    }
                })
            }
        })
    })

    function deleteCoupon(couponId) {
        $.ajax({
            url: '/admin/deleteCoupon/' + couponId,
            method: 'get',
            success: (response) => {
                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    title: 'Coupon Deleted',
                    showConfirmButton: false,
                    timer: 1000
                }).then(() => {
                    location.reload()
                })
            }
        })
    }


</script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.js"></script>
<script type="text/javascript" charset="utf8"
    src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>

<div class="">
    <div class="wrapper ">
        <div class="main-panel">
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top " id="navigation-example">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <a class="navbar-brand" href="">User Management</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index"
                        aria-expanded="false" aria-label="Toggle navigation" data-target="#navigation-example">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">

                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link" href="/logout" id="navbarDropdownMenuLink" data-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">person</i>
                                    <p class="d-lg-none d-md-block">getProdsInOrder
                                        Some Actions
                                    </p>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                                    <a class="dropdown-item" href="/admin/logout">Logout</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <br>
            <br>

            <div class="container mt-5">
                <div class="row tm-content-row">
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12 tm-block-col">
                        <div class="tm-bg-primary-dark tm-block tm-block-products">
                            <div class="tm-product-table-container">
                                <table class="table table-hover tm-table-small tm-product-table" id="orderManage">
                                    <thead>
                                        <tr>

                                            <th scope="col">PLACED ON</th>
                                            <th scope="col">ORDER ID</th>
                                            <th scope="col">DELIVERY DETAILS</th>
                                            <th scope="col">TOTAL ORDER AMOUNT</th>
                                            <th scope="col">PAYMENT MODE</th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each allOrders}}
                                        <tr>

                                            <td class="tm-product-name">{{this.date}}</td>
                                            <td>{{ this._id }}</td>
                                            <td>{{ this.deliveryDetails.name }}<br>
                                                {{this.deliveryDetails.address}}<br>
                                                {{this.deliveryDetails.city}}<br>
                                                {{this.deliveryDetails.state}}<br>
                                                {{this.deliveryDetails.contact}}<br>
                                            </td>
                                            <td>{{ this.totalAmount}}</td>
                                            <td>{{ this.paymentMode}}</td>
                                            <td>
                                                <a href="/admin/productOrderStatus/{{this._id}}"><button
                                                        class=" btn btn-success" style="width: 150px;">
                                                        VIEW PRODUCTS</button>
                                                </a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
    $('#orderManage').DataTable();
  });
</script>
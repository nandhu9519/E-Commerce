<div class="container">
    <br>
    <h3 class="tittle-w3l text-center mb-lg-5 mb-sm-4 mb-3">
            Edit Address</h3>
            
    <form class="form" action="/editAddressSubmit" method="post" id="addAddress">
    <div class="row col-md-12">
        <div class="form-group col-md-6">

                <label for="first_name">
                    <h4>First name</h4>
                </label>
                <input type="text" class="form-control" name="firstName" id="first_name"  value="{{editAddress.fname}}"
                    title="enter your first name if any.">
        
        </div>
        <div class="form-group col-md-6">

                <label for="last_name">
                    <h4>Last name</h4>
                </label>
                <input type="text" class="form-control" name="lastName" id="last_name"  value="{{editAddress.lname}}"
                    title="enter your last name if any.">
        </div>
    </div>    
     <div class="row col-md-12">

        <div class="form-group col-md-6">

            
                <label for="phone">
                    <h4>Address line 1</h4>
                </label>
                <input type="text" class="form-control" name="addressLine1" id="Address line 1" value="{{editAddress.line1}}"
                     title="enter your phone number if any.">
        
        </div>

        <div class="form-group col-md-6">
            
                <label for="mobile">
                    <h4>Address line 2</h4>
                </label>
                <input type="text" class="form-control" name="addressLine2" id="Address line 2" value="{{editAddress.line2}}"
                     title="enter your mobile number if any.">
          
        </div>
    </div>  
    <div class="row col-md-12">

        <div class="form-group col-md-6">

            
                <label for="email">
                    <h4>City</h4>
                </label>
                <input type="text" class="form-control" name="city" id="city"  value="{{editAddress.city}}"
                    title="enter your email.">

        </div>
        <div class="form-group col-md-6">

            
                <label for="email">
                    <h4>State</h4>
                </label>
                <input type="text" class="form-control" name="state" id="state"  value="{{editAddress.state}}"
                    title="enter a location">
          
        </div>
    </div>   
    <div class="row col-md-12">

        <div class="form-group col-md-6">

            
                <label for="password">
                    <h4>PIN code</h4>
                </label>
                <input type="tele" class="form-control" name="pincode" id="pincode"  value="{{editAddress.pincode}}"
                    title="enter your password.">
           
        </div>
        <div class="form-group col-md-6">

            
                <label for="password">
                    <h4>Contact</h4>
                </label>
                <input type="tele" class="form-control" name="contact" id="contact" value="{{editAddress.contact}}"
                    title="enter your password.">
           
        </div>
     </div>   
        <div class="form-group">
            <div class="col-xs-12">
                <br>
                <button class="btn btn-lg btn-success" type="submit"><i class="glyphicon glyphicon-ok-sign"></i>
                    Save</button>
                {{!-- <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i>
                    Reset</button> --}}
            </div>
        </div>
    </form>
</div>
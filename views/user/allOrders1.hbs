<div class="tab-wrap" style="margin-top: -0.001%;">

  <input type="radio" id="tab1" name="tabGroup1" class="tab" checked>
  <label for="tab1" style="font-weight: bolder;">Placed</label>

  <input type="radio" id="tab2" name="tabGroup1" class="tab">
  <label for="tab2" style="font-weight: bolder;">Shipped</label>

  <input type="radio" id="tab3" name="tabGroup1" class="tab">
  <label for="tab3" style="font-weight: bolder;">Delivered</label>

  <input type="radio" id="tab4" name="tabGroup1" class="tab">
  <label for="tab4" style="font-weight: bolder;">Cancelled</label>

  <div class="tab__content">
    <div class="col-md-12">
      {{#if obj.placed}}

      <div class="gallery">
        {{#each obj.placed}}
        <div class="content" style="">
          <img src="/products/{{this.prodId}}__1.jpg" style="width: 180px;">
          <h3>{{this.products}}</h3>
          <p style="color: #333;">Quantity:{{this.quantity}}</p>
          <p style="color: #333;">Payment Mode:{{this.paymentMode}}</p>
          <h6>₹ {{this.totalAmount}}</h6>
          <p style="color: #333;">Placed On:{{this.date}}</p>
          <p style="color: #333;">Time:{{this.time}}</p>

          {{#eq this.mode 'cart'}}
          <a href="/cancelCartProduct?orderId={{this._id}}&prodId={{this.prodId}}&qty={{this.quantity}}"><button
              class="buy-1">Cancel</button></a>
          {{else}}
          <a href="/cancelProductBuyNow?orderId={{this._id}}"><button class="buy-1">Cancel</button></a>
          {{/eq}}
        </div>
        {{/each}}
      </div>

      {{else}}
      <div class="text-center " style="margin-top:2%;">


        <img src="https://cdni.iconscout.com/illustration/premium/thumb/empty-cart-3613108-3020773.png"
          style="width: 200px;">

        <h1 class="h2">Currently there are no placed orders</h1>
        <br>

        <a class="btn btn-primary btn-wide" href="/">Start Shopping</a>
      </div>

      {{/if}}
    </div>
  </div>

  <div class="tab__content">
    {{#if obj.shipped}}

    <div class="gallery">
      {{#each obj.shipped}}
      <div class="content" style="">
        <img src="/products/{{this.prodId}}__1.jpg" style="width: 180px;">
        <h3>{{this.products}}</h3>
        <p style="color: #333;">Quantity:{{this.quantity}}</p>
        <p style="color: #333;">>Payment Mode:{{this.paymentMode}}</p>
        <h6>₹ {{this.totalAmount}}</h6>
        <p style="color: #333;">Placed On:{{this.date}}</p>
        <p style="color: #333;">Time:{{this.time}}</p>

        {{#eq this.mode 'cart'}}
        <a href="/cancelCartProduct?orderId={{this._id}}&prodId={{this.prodId}}&qty={{this.quantity}}"><button
            class="buy-1">Cancel</button></a>
        {{else}}
        <a href="/cancelProductBuyNow?orderId={{this._id}}"><button class="buy-1">Cancel</button></a>
        {{/eq}}
      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="text-center" style="margin-top:2%;">


      <img
        src="https://cdn3.iconfinder.com/data/icons/virancie-shopping-1/30/shopping_072-no_shipping-delivery-truck-vehicle-transport-512.png"
        style="width: 200px;">

      <h1 class="h2">Currently there are no products under transist</h1>
      <br>

      <a class="btn btn-primary btn-wide" href="/">Start Shopping</a>
    </div>
    {{/if}}
  </div>

  <div class="tab__content">
    {{#if obj.delivered}}
    <div class="gallery">
      {{#each obj.delivered}}
      <div class="content" style="">
        <img src="/products/{{this.prodId}}__1.jpg" style="width: 180px;">
        <h3>{{this.products}}</h3>
        <p style="color: #333;">Quantity:{{this.quantity}}</p>
        <p style="color: #333;">Payment Mode:{{this.paymentMode}}</p>
        <h6>₹ {{this.totalAmount}}</h6>
        <p style="color: #333;">Placed On:{{this.date}}</p>
        <p style="color: #333;">Time:{{this.time}}</p>
        <a href="/generateInvoice?orderId={{this._id}}&prodId={{this.prodId}}"><button class="invoice"
            style="background-color: #7952b3;">Download Invoice</button></a>

      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="text-center " style="margin-top:2%;">


      <img
        src="https://image.freepik.com/free-vector/courier-delivering-order-customer-door-man-getting-parcel-box-package-flat-vector-illustration-postman-shipping-service_74855-8309.jpg"
        style="width: 200px;">

      <h1 class="h2">No products delivered yet...</h1>
      <br>

      <a class="btn btn-primary btn-wide" href="/">Start Shopping</a>
    </div>
    {{/if}}
  </div>
  <div class="tab__content">
    {{#if obj.cancelled}}
    <div class="gallery">
      {{#each obj.cancelled}}
      <div class="content" style="">
        <img src="/products/{{this.prodId}}__1.jpg" style="width: 180px;">
        <h3>{{this.products}}</h3>
        <p style="color: #333;">Quantity:{{this.quantity}}</p>
        <p style="color: #333;">Payment Mode:{{this.paymentMode}}</p>
        <h6>₹ {{this.totalAmount}}</h6>
        <p style="color: #333;">Placed On:{{this.date}}</p>
        <p style="color: #333;">Time:{{this.time}}</p>

        <button class="buy-1">Cancelled</button>

      </div>
      {{/each}}
      {{else}}
      <div class="text-center " style="margin-top:2%;">


        <img
          src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRGZJlKf7XUaS63Bv5NyzHEEOsKe3adztaCaGMrBXtwsTXhuQpSzF0vuyib2esYg7U62vc&usqp=CAU"
          style="width: 200px;">

        <h1 class="h2">No products are cancelled...</h1>
        <br>

        <a class="btn btn-primary btn-wide" href="/">Start Shopping</a>
      </div>
      {{/if}}
    </div>
  </div>
</div>


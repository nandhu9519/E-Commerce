<div class="container">

    <div class="toolbar hidden-print">
        <br>
        <div class="text-right">
            {{!-- <button id="printInvoice" style="background-color: #7952b3;" class="btn btn-info" onclick="PrintDiv()"><i
                    class="fa fa-print"></i> Print</button> --}}
            <button class="btn btn-info" onclick="getInvoice()" style="background-color: #7952b3;"><i
                    class="fa fa-download" aria-hidden="true"></i> Download Invoice</button>
        </div>

    </div>
    {{#if cartData}}
    <div class="invoice overflow-auto " id="invoice" class="invoice">
        <div class="">
            <header>
                <div class="row">
                    <div class="col-md-3 logo_agile" style="margin-left: 8%;">
                        <h1 class="text-center">
                            <a href="/" class="font-weight-bold font-italic">
                                <img src="images/logo2.png" alt=" " class="img-fluid">ETron bay
                            </a>
                        </h1>
                    </div>
                    <div class="col company-details">
                        <h2 class="name">
                            <a target="_blank" href="https://lobianijs.com">
                                ETron Bay
                            </a>
                        </h2>
                        <div>Etron Arcade, Mavoor road,<br> Calicut 673002</div>
                        <div>(123) 456-789</div>
                        <div>company@example.com</div>
                    </div>
                </div>
            </header>

            <main>
                <div class="row contacts">
                    <div class="col invoice-to">
                        <div class="text-gray-light">INVOICE TO:</div>
                        <h2 class="to">{{cartData.deliveryDetails.name}}</h2>
                        <div class="address">{{cartData.deliveryDetails.address}}<br>
                            {{cartData.deliveryDetails.city}}<br>
                            {{cartData.deliveryDetails.state}}<br>
                            {{cartData.deliveryDetails.contact}}
                        </div>
                    </div>
                    <div class="col invoice-details">
                        <div class="text-gray-light">INVOICE ID:{{cartData._id}}</div>
                        <div class="date">Date of Invoice: {{cartData.date}}</div>
                    </div>
                </div>
                <div class="table-responsive">
                <table border="0" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr>
                            <th>SL NO</th>
                            <th class="text-left">PRODUCTS</th>
                            <th class="text-right">UNIT PRICE</th>
                            <th class="text-right">QTY</th>
                            <th class="text-right">TOTAL</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td class="no">1</td>
                            <td class="text-left">{{cartData.products}}</td>
                            <td class="unit">₹ {{cartData.unitPrice}}</td>
                            <td class="qty">{{cartData.quantity}}</td>
                            <td class="total">₹ {{cartData.totalAmount}}</td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2"></td>
                            <td colspan="2">SHIPPING</td>
                            <td>Free</td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td colspan="2">GRAND TOTAL</td>
                            <td>₹ {{cartData.totalAmount}}</td>
                        </tr>
                    </tfoot>
                </table>
                </div>
                <div class="thanks">Thank you!</div>
                <div class="notices">
                    <div>NOTICE:</div>
                    <div class="notice">Refund on product cancellation is only initiated on submission of this invoice
                        via registered email </div>
                </div>
            </main>
        </div>
    </div>

    {{else}}
    <div class="invoice overflow-auto " id="invoice">
        <div class=" col-md-12 ">
            <header>
                <div class="row">
                    <div class="col-md-3 logo_agile" style="margin-left: 8%;">
                        <h1 class="text-center">
                            <a href="/" class="font-weight-bold font-italic">
                                <img src="images/logo2.png" alt=" " class="img-fluid">ETron bay
                            </a>
                        </h1>
                    </div>
                    <div class="col-sm-12 company-details">
                        <h2 class="name">
                            <a target="_blank" href="https://lobianijs.com">
                                ETron Bay
                            </a>
                        </h2>
                        <div>Etron Arcade, Mavoor road,<br> Calicut 673002</div>
                        <div>(123) 456-789</div>
                        <div>company@example.com</div>
                    </div>
                </div>
            </header>

            <main>
                <div class="row contacts">
                    <div class="invoice-to">
                        <div class="text-gray-light">INVOICE TO:</div>
                        <h2 class="to">{{orderDetails.deliveryDetails.name}}</h2>
                        <div class="address">{{orderDetails.deliveryDetails.address}}<br>
                            {{orderDetails.deliveryDetails.city}}<br>
                            {{orderDetails.deliveryDetails.state}}<br>
                            {{orderDetails.deliveryDetails.contact}}
                        </div>
                    </div>
                    <div class=" invoice-details">
                        <div class="text-gray-light">INVOICE ID:{{orderDetails._id}}</div>
                        <div class="date">Date of Invoice: {{orderDetails.date}}</div>
                    </div>
                </div>
                <div class="table-responsive">
                <table border="0" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr>
                            <th>SL NO</th>
                            <th class="text-left">PRODUCTS</th>
                            <th class="text-right">UNIT PRICE</th>
                            <th class="text-right">QTY</th>
                            <th class="text-right">TOTAL</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td class="no">1</td>
                            <td class="text-left">{{productDetails.name}}</td>
                            <td class="unit">₹ {{orderDetails.totalAmount}}</td>
                            <td class="qty">1</td>
                            <td class="total">₹ {{orderDetails.totalAmount}}</td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2"></td>
                            <td colspan="2">SHIPPING</td>
                            <td>Free</td>
                        </tr>
                        <tr>
                            <td colspan="2"></td>
                            <td colspan="2">GRAND TOTAL</td>
                            <td>₹ {{orderDetails.totalAmount}}</td>
                        </tr>
                    </tfoot>
                </table>
                </div>
                <div class="thanks">Thank you!</div>
                <div class="notices">
                    <div>NOTICE:</div>
                    <div class="notice">Refund on product cancellation is only initiated on submission of this
                        invoice
                        via registered email </div>
                </div>
            </main>
        </div>
    </div>
    {{/if}}
</div>
<!--DO NOT DELETE THIS div. IT is responsible for showing footer always at the bottom-->

    function verifyPayment(payment, order) {
        $.ajax({
            url: '/verifyPayment',
            data: {
                payment, order
            },
            method: 'post',
            success: (response) => {
                if (response.status) {
                    location.href = '/razorpayBuyNowPlaceOrder'
                } else {
                    alert('payment failed')
                }
            }
        })

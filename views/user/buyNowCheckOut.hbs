    function applyCoupon() {
        let coupon = document.getElementById('buyNowCouponCode').value
        let price = document.getElementById('buyNowUnitAmount').innerHTML
        console.log('aasd', price, 'code', coupon)
        $.ajax({
            url: '/couponElgibility/?couponCode=' + coupon + '&price=' + parseInt(price),
            method: 'get',
            success: (response) => {
                if (response == false) {
                    console.log('false')

                    document.getElementById('errorMsg').innerHTML = "<span style='color:red'>Coupon claimed</span>"
                    document.getElementById('discountPrice').innerHTML = ' '
                    document.getElementById('buyNowTotalAmount').innerHTML = ' ' + price
                } else if (response.status == true) {
                    document.getElementById('errorMsg').innerHTML = " "
                    document.getElementById('discountPrice').innerHTML = '<span style="color: green;"> ₹' + parseInt(response.discountprice)
                    document.getElementById('buyNowTotalAmount').innerHTML = ' ' + parseInt(response.finalPrice)
                    document.getElementById('buNowHidden').value = response.finalPrice
                    document.getElementById('buyNowCouponName').value = response.coupon
                } else {
                    console.log('error msg')
                    document.getElementById('errorMsg').innerHTML = "<span style='color:red'>Invalid Coupon </span>"
                    document.getElementById('discountPrice').innerHTML = ' '
                    document.getElementById('buyNowTotalAmount').innerHTML = ' ' + price
                }
            }
        })
